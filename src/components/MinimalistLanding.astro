---
import { SEO } from 'astro-seo';
import { getConfigFile, getNavigation } from '../utils/config';
import { createLink } from '../utils/url';

const config = await getConfigFile();
const siteUrl = config.metadata.url?.replace(/\/$/, '') || '';

// Get first docs link
let docsUrl = '/introduction';
if (config.navigation.sidebar) {
    const firstSidebarItem = config.navigation.sidebar[0];
    if (firstSidebarItem && firstSidebarItem.items && firstSidebarItem.items[0]) {
        docsUrl = createLink(firstSidebarItem.items[0].href);
    }
}
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <SEO
        title="Lito - The Open Source Mintlify Alternative"
        description="Beautiful documentation sites from Markdown. Built on Astro. Free and self-hosted."
        canonical={siteUrl}
        openGraph={{
            basic: {
                title: "Lito - The Open Source Mintlify Alternative",
                type: "website",
                image: siteUrl + "/og-image.png",
                url: siteUrl,
            },
            optional: {
                description: "Beautiful documentation sites from Markdown. Built on Astro. Free and self-hosted.",
                siteName: config.metadata.name,
            },
        }}
        twitter={{
            card: "summary_large_image",
            title: "Lito - The Open Source Mintlify Alternative",
            description: "Beautiful documentation sites from Markdown. Built on Astro. Free and self-hosted.",
            image: siteUrl + "/og-image.png",
        }}
        extend={{
            meta: [
                { name: "keywords", content: "documentation, markdown, astro, open source, mintlify alternative, static site generator" },
                { name: "author", content: "Lito" },
                { name: "theme-color", content: "#000000" },
            ],
        }}
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --bg-light: #ffffff;
            --text-primary-light: #000000;
            --text-secondary-light: #666666;
            --text-tertiary-light: #999999;
            --border-light: #e5e5e5;

            --bg-dark: #000000;
            --text-primary-dark: #ffffff;
            --text-secondary-dark: #a0a0a0;
            --text-tertiary-dark: #666666;
            --border-dark: #1a1a1a;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica', 'Arial', sans-serif;
            line-height: 1.7;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* Light mode (default) */
        body {
            background-color: var(--bg-light);
            color: var(--text-primary-light);
        }

        /* Dark mode */
        body.dark-mode {
            background-color: var(--bg-dark);
            color: var(--text-primary-dark);
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 40px;
        }

        /* Header & Navigation */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            padding: 20px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        body:not(.dark-mode) .header {
            background-color: rgba(255, 255, 255, 0.8);
        }

        body.dark-mode .header {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .logo {
            font-size: 14px;
            font-weight: 600;
            letter-spacing: -0.02em;
        }

        .nav {
            display: flex;
            gap: 30px;
            align-items: center;
        }

        .nav a {
            font-size: 13px;
            text-decoration: none;
            transition: opacity 0.2s;
        }

        body:not(.dark-mode) .nav a {
            color: var(--text-secondary-light);
        }

        body.dark-mode .nav a {
            color: var(--text-secondary-dark);
        }

        .nav a:hover {
            opacity: 0.6;
        }

        /* Theme Toggle */
        .theme-toggle {
            background: none;
            border: none;
            cursor: pointer;
            padding: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            transition: background-color 0.2s;
        }

        body:not(.dark-mode) .theme-toggle {
            color: var(--text-secondary-light);
        }

        body.dark-mode .theme-toggle {
            color: var(--text-secondary-dark);
        }

        .theme-toggle:hover {
            background-color: rgba(128, 128, 128, 0.1);
        }

        /* Chapter Indicator */
        .chapter {
            position: fixed;
            top: 50%;
            right: 40px;
            transform: translateY(-50%);
            font-size: 11px;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            writing-mode: vertical-rl;
            z-index: 100;
        }

        body:not(.dark-mode) .chapter {
            color: var(--text-tertiary-light);
        }

        body.dark-mode .chapter {
            color: var(--text-tertiary-dark);
        }

        /* Sections */
        section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 200px 0;
        }

        /* Hero Section */
        .hero {
            padding-top: 250px;
        }

        .hero h1 {
            font-size: 72px;
            font-weight: 700;
            line-height: 1.1;
            letter-spacing: -0.03em;
            margin-bottom: 30px;
        }

        .hero .subtitle {
            font-size: 20px;
            font-style: italic;
            margin-bottom: 50px;
        }

        body:not(.dark-mode) .hero .subtitle {
            color: var(--text-secondary-light);
        }

        body.dark-mode .hero .subtitle {
            color: var(--text-secondary-dark);
        }

        .hero .description {
            font-size: 17px;
            line-height: 1.8;
            max-width: 600px;
        }

        body:not(.dark-mode) .hero .description {
            color: var(--text-secondary-light);
        }

        body.dark-mode .hero .description {
            color: var(--text-secondary-dark);
        }

        /* Section Headers */
        .section-label {
            font-size: 11px;
            letter-spacing: 0.15em;
            text-transform: uppercase;
            margin-bottom: 60px;
            display: block;
        }

        body:not(.dark-mode) .section-label {
            color: var(--text-tertiary-light);
        }

        body.dark-mode .section-label {
            color: var(--text-tertiary-dark);
        }

        /* Quote Section */
        .quote-text {
            font-size: 42px;
            font-weight: 500;
            line-height: 1.4;
            letter-spacing: -0.02em;
            margin-bottom: 40px;
        }

        .quote-attribution {
            font-size: 15px;
            font-style: italic;
        }

        body:not(.dark-mode) .quote-attribution {
            color: var(--text-secondary-light);
        }

        body.dark-mode .quote-attribution {
            color: var(--text-secondary-dark);
        }

        /* Philosophy Section */
        .philosophy h2 {
            font-size: 48px;
            font-weight: 700;
            line-height: 1.2;
            letter-spacing: -0.02em;
            margin-bottom: 40px;
        }

        .philosophy p {
            font-size: 17px;
            line-height: 1.8;
            margin-bottom: 30px;
        }

        body:not(.dark-mode) .philosophy p {
            color: var(--text-secondary-light);
        }

        body.dark-mode .philosophy p {
            color: var(--text-secondary-dark);
        }

        /* Features Section */
        .feature-grid {
            display: grid;
            gap: 80px;
            margin-top: 60px;
        }

        .feature-item h3 {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 20px;
            letter-spacing: -0.01em;
        }

        .feature-item p {
            font-size: 16px;
            line-height: 1.8;
            margin-bottom: 30px;
        }

        body:not(.dark-mode) .feature-item p {
            color: var(--text-secondary-light);
        }

        body.dark-mode .feature-item p {
            color: var(--text-secondary-dark);
        }

        /* Code Block Mockup */
        .code-mockup {
            border-radius: 12px;
            padding: 30px;
            font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace;
            font-size: 14px;
            line-height: 1.6;
            border: 1px solid;
            margin-top: 20px;
        }

        body:not(.dark-mode) .code-mockup {
            background-color: #f8f8f8;
            border-color: var(--border-light);
            color: var(--text-primary-light);
        }

        body.dark-mode .code-mockup {
            background-color: #0a0a0a;
            border-color: var(--border-dark);
            color: var(--text-primary-dark);
        }

        .code-line {
            margin-bottom: 8px;
        }

        .code-comment {
            opacity: 0.5;
        }

        /* CTA Section */
        .cta {
            text-align: center;
        }

        .cta h2 {
            font-size: 56px;
            font-weight: 700;
            line-height: 1.2;
            letter-spacing: -0.02em;
            margin-bottom: 40px;
        }

        .cta-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-top: 50px;
        }

        .btn {
            padding: 16px 32px;
            font-size: 15px;
            font-weight: 500;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.2s;
            display: inline-block;
            border: 1px solid;
        }

        .btn-primary {
            background-color: var(--text-primary-light);
            color: var(--bg-light);
            border-color: var(--text-primary-light);
        }

        body.dark-mode .btn-primary {
            background-color: var(--text-primary-dark);
            color: var(--bg-dark);
            border-color: var(--text-primary-dark);
        }

        .btn-primary:hover {
            opacity: 0.8;
        }

        .btn-secondary {
            background-color: transparent;
        }

        body:not(.dark-mode) .btn-secondary {
            color: var(--text-primary-light);
            border-color: var(--border-light);
        }

        body.dark-mode .btn-secondary {
            color: var(--text-primary-dark);
            border-color: var(--border-dark);
        }

        .btn-secondary:hover {
            background-color: rgba(128, 128, 128, 0.05);
        }

        /* Footer */
        footer {
            padding: 60px 40px;
            text-align: center;
            font-size: 13px;
            border-top: 1px solid;
        }

        body:not(.dark-mode) footer {
            color: var(--text-tertiary-light);
            border-color: var(--border-light);
        }

        body.dark-mode footer {
            color: var(--text-tertiary-dark);
            border-color: var(--border-dark);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container {
                padding: 0 24px;
            }

            .header {
                padding: 20px 24px;
            }

            .chapter {
                display: none;
            }

            section {
                padding: 120px 0;
            }

            .hero {
                padding-top: 150px;
            }

            .hero h1 {
                font-size: 48px;
            }

            .hero .subtitle {
                font-size: 18px;
            }

            .quote-text {
                font-size: 32px;
            }

            .philosophy h2 {
                font-size: 36px;
            }

            .cta h2 {
                font-size: 40px;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: stretch;
            }

            .nav {
                gap: 20px;
            }

            .nav a {
                font-size: 12px;
            }

            .nav a:not(.docs-btn) {
                display: none;
            }
        }

        /* Smooth Fade-in Animation */
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 0.8s ease forwards;
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in:nth-child(1) { animation-delay: 0.1s; }
        .fade-in:nth-child(2) { animation-delay: 0.2s; }
        .fade-in:nth-child(3) { animation-delay: 0.3s; }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="logo">Lito</div>
        <nav class="nav">
            <a href="#philosophy">Philosophy</a>
            <a href="#features">Features</a>
            <a href="https://github.com/devrohit06/lito" target="_blank">GitHub</a>
            <a href={docsUrl} class="docs-btn">Docs →</a>
            <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="5"></circle>
                    <line x1="12" y1="1" x2="12" y2="3"></line>
                    <line x1="12" y1="21" x2="12" y2="23"></line>
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                    <line x1="1" y1="12" x2="3" y2="12"></line>
                    <line x1="21" y1="12" x2="23" y2="12"></line>
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                </svg>
            </button>
        </nav>
    </header>

    <!-- Chapter Indicator -->
    <div class="chapter">Chapter I</div>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="fade-in">
                <h1>Beautiful docs,<br>zero effort</h1>
            </div>
            <div class="fade-in">
                <p class="subtitle">The open-source Mintlify alternative</p>
            </div>
            <div class="fade-in">
                <p class="description">
                    Transform your Markdown into stunning documentation sites in seconds.
                    Powered by Astro. No config needed. Just write and ship.
                </p>
            </div>
        </div>
    </section>

    <!-- Quote Section -->
    <section id="quote">
        <div class="container">
            <span class="section-label">Philosophy</span>
            <blockquote>
                <p class="quote-text">
                    "Documentation shouldn't cost $150/month. It shouldn't require
                    a PhD in static site generators. It should just work."
                </p>
                <p class="quote-attribution">— Design principle</p>
            </blockquote>
        </div>
    </section>

    <!-- Philosophy Section -->
    <section id="philosophy">
        <div class="container">
            <div class="philosophy">
                <h2>Built on principles,<br>not compromises</h2>
                <p>
                    Most documentation tools force you to choose between simplicity and power.
                    Hosted platforms are easy but expensive. Custom builds are flexible but time-consuming.
                </p>
                <p>
                    Lito refuses this false dichotomy. Start with Markdown and a simple JSON config.
                    Add MDX components when you need them. Eject to full Astro when you're ready for complete control.
                    Progressive complexity, on your terms.
                </p>
                <p>
                    Self-hosted. Open source. Free forever.
                </p>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features">
        <div class="container">
            <span class="section-label">What you get</span>

            <div class="feature-grid">
                <div class="feature-item">
                    <h3>One command to start</h3>
                    <p>
                        Point Lito at your Markdown files. Run one command.
                        Your documentation site is live. No configuration required.
                    </p>
                    <div class="code-mockup">
                        <div class="code-line">{"$ npx @litodocs/cli dev --input ./docs"}</div>
                        <div class="code-line code-comment">{"✓ Server running at localhost:4321"}</div>
                    </div>
                </div>

                <div class="feature-item">
                    <h3>Zero JavaScript by default</h3>
                    <p>
                        Built on Astro's cutting-edge architecture. Ship pure HTML and CSS.
                        100 Lighthouse scores. Add interactive islands only when you need them.
                    </p>
                </div>

                <div class="feature-item">
                    <h3>20+ built-in components</h3>
                    <p>
                        Tabs, accordions, callouts, cards, code groups, API endpoints, and more.
                        All auto-imported and ready to use in your MDX files.
                    </p>
                    <div class="code-mockup">
                        <div class="code-line code-comment">{"// Just use them - no imports needed"}</div>
                        <div class="code-line">{"# Getting Started"}</div>
                        <div class="code-line">&nbsp;</div>
                        <div class="code-line">{"<Card title=\"Quick Start\">"}</div>
                        <div class="code-line">{"  Follow these steps to get started."}</div>
                        <div class="code-line">{"</Card>"}</div>
                    </div>
                </div>

                <div class="feature-item">
                    <h3>OpenAPI integration</h3>
                    <p>
                        Generate beautiful API documentation from your OpenAPI specs.
                        Automatic endpoint pages. Interactive request builders. Type-safe examples.
                    </p>
                </div>

                <div class="feature-item">
                    <h3>Full-text search</h3>
                    <p>
                        Powered by Pagefind. Instant, offline-capable search across all your docs.
                        No external services. No API keys. Just works.
                    </p>
                </div>

                <div class="feature-item">
                    <h3>Eject when you're ready</h3>
                    <p>
                        Outgrow the defaults? Run one command to get a full Astro project.
                        Complete control over every file. Zero lock-in, ever.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <div class="container">
            <h2>Ready to build<br>something beautiful?</h2>
            <div class="cta-buttons">
                <a href={docsUrl} class="btn btn-primary">Read the Docs</a>
                <a href="https://github.com/devrohit06/lito" class="btn btn-secondary" target="_blank">View on GitHub</a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>Built with Lito. Open source and free forever.</p>
    </footer>

    <script is:inline>
        // Theme toggle
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;

        // Check for saved theme preference or default to light mode
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            body.classList.add('dark-mode');
        }

        themeToggle.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            const isDark = body.classList.contains('dark-mode');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Update chapter indicator on scroll
        const chapter = document.querySelector('.chapter');
        const sections = ['Hero', 'Quote', 'Philosophy', 'Features', 'Start'];

        window.addEventListener('scroll', () => {
            const scrollPosition = window.scrollY + window.innerHeight / 2;
            const sectionElements = document.querySelectorAll('section');

            sectionElements.forEach((section, index) => {
                const sectionTop = section.offsetTop;
                const sectionBottom = sectionTop + section.offsetHeight;

                if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
                    const chapterNum = ['I', 'II', 'III', 'IV', 'V'][index] || 'I';
                    chapter.textContent = `Chapter ${chapterNum}`;
                }
            });
        });
    </script>
</body>
</html>
